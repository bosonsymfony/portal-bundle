<!DOCTYPE html>
<html {% block ngApp %}ng-app="portal"{% endblock %}>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Portal Boson{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <!-- CSS Styles Block -->
    <link href="{{ asset('bundles/portal/css/metro.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/portal/css/metro-icons.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/portal/css/metro-responsive.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/portal/css/metro-schemes.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/portal/css/custom.css') }}" rel="stylesheet">
    <!-- Ebd CSS Styles Block -->

    {% block stylesheets %}{% endblock %}

    <!-- Javascript Libraries Block -->
    <script src="{{ asset('bundles/portal/lib/jquery/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/portal/lib/jquery-slim-scroll/jquery.slimscroll.min.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('bundles/portal/lib/angular/angular.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/portal/lib/angular/angular-animate.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/portal/lib/angular-ui-router/angular-ui-router.js') }}"
            type="text/javascript"></script>

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    <!-- End Javascript Libraries Block -->

    <!-- App Block -->
    <script src="{{ asset('bundles/portal/app/app.js') }}"></script>
    <script src="{{ asset('bundles/portal/app/service/portalSvc.js') }}"></script>

    <script src="{{ asset('bundles/portal/app/routes.js') }}"></script>
    <script src="{{ asset('bundles/portal/app/controller/portalCtrl.js') }}"></script>
    <!-- End App Block -->

    <!-- Javascript Block -->
    <script src="{{ asset('bundles/portal/js/metro.min.js') }}"></script>
    <script src="{{ asset('bundles/portal/js/custom.js') }}"></script>
    <!-- End Javascript Block -->

</head>
<body class="metro content-view background" ui-view="">
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
