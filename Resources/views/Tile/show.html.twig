{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tile</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Selected</th>
                <td>{{ entity.selected }}</td>
            </tr>
            <tr>
                <th>Backgroung</th>
                <td>{{ entity.backgroung }}</td>
            </tr>
            <tr>
                <th>Foreground</th>
                <td>{{ entity.foreground }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ entity.size }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tile') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tile_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
